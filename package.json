{
  "name": "alliance-risk-analysis-tool",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "scripts": {
    "dev:api": "pnpm --filter @alliance-risk/api dev",
    "dev:web": "pnpm --filter @alliance-risk/web dev",
    "dev": "pnpm run dev:api & pnpm run dev:web",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "deploy:api": "bash scripts/deploy-api.sh",
    "deploy:web": "bash scripts/deploy-web.sh",
    "deploy:all": "bash scripts/deploy-api.sh && bash scripts/deploy-web.sh",
    "migrate:deploy": "pnpm --filter @alliance-risk/api exec prisma migrate deploy",
    "migrate:remote": "bash scripts/migrate-remote.sh"
  },
  "dependencies": {
    "@radix-ui/react-visually-hidden": "^1.2.4"
  }
}
